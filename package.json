{
  "name": "node-env-types",
  "version": "2.0.0",
  "description": "this is a simple package that generates typescript types for .env(dotenv) files.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --detectOpenHandles",
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "lint": "tsc && npx standard --fix",
    "ci": "yarn lint && yarn test && yarn build",
    "release": "yarn lint && yarn test && yarn build && changeset publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CrispenGari/node-env-types.git"
  },
  "keywords": [
    ".env",
    "typescript",
    "dotenv",
    "types",
    "dotenv-types",
    ".env-types",
    "environment-variables",
    "javascript",
    "nodejs"
  ],
  "peerDependencies": {
    "dotenv": ">=16.0.0",
    "typescript": ">=4.0.0"
  },
  "author": "CrispenGari",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CrispenGari/node-env-types/issues"
  },
  "homepage": "https://github.com/CrispenGari/node-env-types#readme",
  "dependencies": {
    "chalk": "^5.0.1",
    "dotenv": "^16.0.1",
    "typescript": "^5.5.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.8",
    "@babel/preset-typescript": "^7.24.7",
    "@changesets/cli": "^2.27.7",
    "@types/chalk": "^2.2.0",
    "@types/node": "^18.0.6",
    "jest": "^29.7.0",
    "standard": "^17.1.0",
    "tsup": "^8.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "standard": {
    "env": [
      "mocha",
      "commonjs",
      "node",
      "jest"
    ]
  }
}
